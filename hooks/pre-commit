#!/bin/sh
set -ue

if [ -z "$HOOKS_DIR" ]
then
    echo 1>&2 "ERROR: HOOKS_DIR is not set. Please reâ€“install @saji/git-hooks."
    exit 64 # EX_USAGE
fi

# shellcheck disable=SC1091
. "$HOOKS_DIR/lib/bootstrap"

# Bail early if there are no changes
if git diff --quiet --cached "$AGAINST"
then
  exit 0
fi

run_hooks
